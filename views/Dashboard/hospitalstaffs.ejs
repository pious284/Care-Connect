<style>
    table th,
    table td {
        padding: 0.4rem;
        vertical-align: middle;
        border-top: 1px solid #dee2e6;
        font-size: 0.875rem;
    } 

</style>

<div class="col ">
    <div class="welcome mb-4">
        <h4 class="text-primary font-monospace">Facility Staffs</h4>
        <p class="small">A brief summary of facility staffs</p>
    </div>
    <div class="tablecontainer table-responsive">
        <table class=" table-hover ">
            <thead class="table-light p-4">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Profile</th>
                    <th scope="col">Full Name</th>
                    <th scope="col">Email</th>
                    <th scope="col">Contact</th>
                    <th scope="col">Gender</th>
                    <th scope="col">Staff ID</th>
                    <th scope="col">Role</th>
                    <th scope="col">Status</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody>
                <% if (staffs && staffs.length> 0) { %>
                    <% staffs.forEach((staff, index)=> { %>
                        <tr>
                            <th scope="row">
                                <%= index + 1 %>
                            </th>
                            <td>
                                <img src="<%= staff.profile.picture %>" alt="Profile picture" class="rounded-circle"
                                    height="40" width="40">
                            </td>
                            <td>
                                <%= staff.title %>
                                    <%= staff.firstname %>
                                        <%= staff.lastname %>
                            </td>
                            <td>
                                <a href="mailto:<%= staff.email %>">
                                    <%= staff.email %>
                                </a>
                            </td>
                            <td>
                                <a href="tel:+233 <%= staff.contact %>">
                                    <%= staff.contact %>
                                </a>
                            </td>
                            <td>
                                <%= staff.gender %>
                            </td>
                            <td>
                                <%= staff.staffId %>
                            </td>
                            <td>
                                <%= staff.position %>
                            </td>
                            <td>
                                <span class="badge p-2 text-white bg-<%= staff.status === 'active' ? 'success' : 'danger' %>">
                                    <%= staff.status %>
                                </span>
                            </td>
                            <td>
                                <div class="btn-group">
                                    <a href="/update/<%= staff._id %>" class="btn btn-sm btn-outline-primary">
                                        <i class="bi bi-pencil"></i> Edit
                                    </a>
                                    <a href="/delete/<%= staff._id %>" class="btn btn-sm btn-outline-danger ms-1"
                                        onclick="return confirm('Are you sure you want to delete this staff member?')">
                                        <i class="bi bi-trash"></i> Delete
                                    </a>
                                </div>
                            </td>
                        </tr>
                        <% }) %>
                            <% } else { %>
                                <tr>
                                    <td colspan="13" class="text-center">No staff records found</td>
                                </tr>
                                <% } %>
            </tbody>
        </table>
    </div>

</div>