<!DOCTYPE html>
<html>
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .toast {
            min-width: 300px;
        }
        
        /* Custom colors for different status types */
        .bg-success { background-color: #28a745 !important; }
        .bg-danger { background-color: #dc3545 !important; }
        .bg-info { background-color: #17a2b8 !important; }
        .bg-warning { background-color: #ffc107 !important; }
    </style>
</head>
<body>
    <% if (alert && alert.message && alert.message.length > 0) { %>
        <div class="toast-container position-fixed top-0 end-0 p-3">
            <div id="customToast" class="toast" role="alert" aria-live="assertive" aria-atomic="true">
                <div class="toast-header bg-<%= alert.status %> text-white">
                    <strong class="me-auto">Notification</strong>
                    <small>Just now</small>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="toast" aria-label="Close"></button>
                </div>
                <div class="toast-body">
                    <%= alert.message %>
                </div>
            </div>
        </div>
    <% } %>

    <%- body %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            var toastElement = document.getElementById('customToast');
            if (toastElement) {
                var toast = new bootstrap.Toast(toastElement, {
                    autohide: true,
                    delay: 5000 // Hide after 5 seconds
                });
                toast.show();
            }
        });
    </script>
</body>
</html>