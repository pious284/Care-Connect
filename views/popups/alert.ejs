<% if (alert.message.length > 0) { %>
    <div class="toast-container position-fixed top-0 end-0 p-3">
      <div id="customToast" class="toast" role="alert" aria-live="assertive" aria-atomic="true">
        <div class="toast-header bg-<%= alert.status %> text-white">
          <strong class="me-auto">Notification</strong>
          <small>Just now</small>
          <button type="button" class="btn-close btn-close-white" data-bs-dismiss="toast" aria-label="Close"></button>
        </div>
        <div class="toast-body">
          <%= alert.message %>
        </div>
      </div>
    </div>
  <% } %>
  
  <style>
   
  </style>
  
  <script>
  document.addEventListener('DOMContentLoaded', function() {
    var toastElement = document.getElementById('customToast');
    if (toastElement) {
      var toast = new bootstrap.Toast(toastElement, {
        autohide: true,
        delay: 5000 // Hide after 5 seconds
      });
      toast.show();
    }
  });
  </script>